@model WebApplication1.ViewModels.DevisViewModels
@{
    Layout = "~/Views/Shared/_LayoutDeconnecte.cshtml";
    ViewBag.Title = "Formulaire de connexion";
}

@if (!Model.Authentifie)
{

    @using (Html.BeginForm("Index", "Connexion", FormMethod.Post, new { @class = "text-left" }))
    {

        <div class="col-10">
            <h3 class="section-title">Se connecter</h3>

            Veuillez remplir les champs ci-dessous pour accéder à votre espace.
            <br /> <br />
        </div>

        <div class="form-group row">
            <label for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(u => Model.Utilisateur.Mail, new { @class = "form-control", style = "margin-top: 10px", placeholder = "Votre adresse email", required = "required" })
                @Html.ValidationMessageFor(u => Model.Utilisateur.Mail)
            </div>
        </div>

        <div class="form-group row">
            <label for="mdp" class="col-sm-2 col-form-label">Mot de passe</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(u => Model.Utilisateur.MotDePasse, new { @class = "form-control", style = "margin-top: 10px", placeholder = "Votre mot de passe", type = "password", value = "FakePSW", id = "myInput", required = "required" })
            </div>
        </div>

        <div class="form-group row">
            <label for="robot" class="col-sm-2 col-form-label">14 + 2 =</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(u => Model.Utilisateur.MotDePasse, new { @class = "form-control", style = "margin-top: 10px", placeholder = "Total de 14+2", required="required", pattern = "16"})
            </div>
        </div>

        <div class="form-group row">
            <label for="robot" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">
                <input type="checkbox" id="affichageMDP" name="affichageMDP" style="margin-left:10px;" onclick="myFunction()">
                <label for="affichageMDP">Afficher le mot de passe</label>
            </div>
        </div>

        <script>
            function myFunction() {
                var x = document.getElementById("myInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
        </script>

        <div class="form-group row">
            <label for="robot" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">
                <a class="lienFormulaire" href="/Utilisateur/ModifierUtilisateur" style="margin-left:10px;">Mot de passe oublié ?</a>
            </div>
        </div>

        <div class="form-group row">
            <label for="robot" class="col-sm-12 col-form-label">
                <div align="right">
                    <input class="button2" type="submit" value="Se connecter" style="position: relative; float: right"; />
                </div>
            </label>
        </div>


        <div class="form-group row">
            <label for="robot" class="col-sm-12 col-form-label">
                <p>Vous n'avez pas encore de compte ? <br /> <a class="lienFormulaire" href="/Utilisateur/ModifierUtilisateur">Cliquez ici</a> pour nous contacter ou faites une demande de devis en ligne, nous vous enverrons ensuite vos identifiants.</p>
            </label>
        </div>



    }
}

